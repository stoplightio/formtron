{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://npmjs.org/package/formtron",
  "$ref": "#/definitions/form",
  "definitions": {
    "_primitive": {
      "type": "object",
      "required": ["title", "type"],
      "properties": {
        "type": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "show": {
          "type": "string"
        },
        "area": {
          "type": "string"
        },
        "disabled": {
          "type": "boolean"
        },
        "custom": {}
      },
      "additionalProperties": true
    },
    "field": {
      "anyOf": [
        { "$ref": "#/definitions/_primitive" },
        { "$ref": "#/definitions/form" }
      ]
    },
    "form": {
      "type": "object",
      "required": ["type", "fields"],
      "properties": {
        "$schema": {
          "type": "string"
        },
        "type": {
          "type": "string",
          "enum": ["form"]
        },
        "title": {
          "type": "string"
        },
        "path": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "fields": {
          "type": "object",
          "additionalProperties": { "$ref": "#/definitions/field" }
        },
        "layouts": {
          "type": "object",
          "additionalProperties": {
            "type": "array",
            "items": {
              "type":  "string"
            }
          }
        },
        "custom": {}
      },
      "additionalProperties": false
    }
  }
}
