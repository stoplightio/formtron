{
  "$schema": "../../../../ui-schema.json",
  "title": "Form (OASv2 Operation Node)",
  "description": "An HTTP operation.",
  "type": "form",
  "fields": {
    "paths.*.?": {
      "type": "select",
      "options": ["get", "post", "put", "delete", "options"],
      "title": "Method"
    },
    "paths.?.*": {
      "type": "string",
      "title": "path",
      "required": true
    },
    "paths.*.*.tags": {
      "type": "multiselect",
      "title": "Tag",
      "custom": {
        "source": "tags"
      }
    },
    "paths.*.*.taglist": {
      "title": "List of Tags",
      "type": "array",
      "items": {
        "type": "multiselect",
        "title": "Tag",
        "options": ["Admin", "Todos"]
      }
    },
    "paths.*.*.description": {
      "type": "markdown",
      "title": "Description"
    }
  }
}
