{
  "$schema": "../../../../ui-schema.json",
  "type": "form",
  "title": "Simplest Ever Form",
  "description": "A string, an integer, and a checkbox walk into a form",
  "layout": "2",
  "layouts": {
    "2": ["name age", "checked none"],
    "3": ["name age checked"]
  },
  "fields": {
    "name": {
      "type": "string",
      "title": "Name"
    },
    "age": {
      "type": "integer",
      "title": "Age",
      "required": true
    },
    "checked": {
      "type": "checkbox",
      "title": "Checked"
    }
  }
}
