{
  "$schema": "../../../../ui-schema.json",
  "title": "Form (OASv2 Root Node)",
  "description": "Top-level properties of your OASv2 spec.",
  "type": "form",
  "fields": {
    "info.title": {
      "type": "string",
      "title": "Title"
    },
    "info.version": {
      "type": "string",
      "title": "Version"
    },
    "host": {
      "type": "string",
      "title": "Host",
      "required": true
    },
    "info.description": {
      "type": "markdown",
      "title": "Description"
    },
    "schemes": {
      "type": "multiselect",
      "title": "Schemes",
      "options": ["http", "https", "ws", "wss"]
    },
    "info.contact": {
      "type": "form",
      "title": "Contact",
      "description": "",
      "fields": {
        "name": {
          "type": "string",
          "title": "Name",
          "required": true
        },
        "email": {
          "type": "string",
          "title": "Email",
          "required": true
        },
        "url": {
          "type": "string",
          "title": "URL",
          "required": true
        }
      }
    },
    "info.license.name": {
      "type": "string",
      "title": "License"
    }
  }
}
